{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.0.0",
  "id": "08a2b440-b208-4cd4-9818-1d8580711c2b",
  "packageName": "com.microsoft.scrumstatus",
  "developer": {
    "name": "PwCLabsStrategy",
    "websiteUrl": "https://github.com/NotoriousBiagi/microsoft-teams-apps-scrumstatus",
    "privacyUrl": "https://github.com/NotoriousBiagi/microsoft-teams-apps-scrumstatus",
    "termsOfUseUrl": "https://github.com/NotoriousBiagi/microsoft-teams-apps-scrumstatus"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Scrum Status"
  },
  "description": {
    "short": "Gizmonic ScrumBot helps you get status updates from your team in group chat.",
    "full": "Gizmonic ScrumBot is a simple scrum assistant that will enable users to run asynchronous standup meetings and provide and easy way for the users to share their daily updates."
  },
  "accentColor": "#FFCCD8",
  "bots": [
    {
      "botId": "08a2b440-b208-4cd4-9818-1d8580711c2b",
      "scopes": [
        "groupchat"
      ],
      "commandLists": [
        {
          "scopes": [
            "groupchat"
          ],
          "commands": [
            {
              "title": "Start scrum",
              "description": "Enter and review updates from the people in this group chat"
            },
            {
              "title": "End scrum",
              "description": "Stop the current scrum"
            }
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "gizmonictuesdaybot.azurewebsites.net",
    "github.com"
  ]
}